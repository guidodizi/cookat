extends layout
block content
  section.padded-section.p-3.p-lg-5.d-column
    .my-auto.col-sm-8
      h2 
        span.fa.fa-edit
        | &nbsp; Editar Chef
        
      if errors
        ul
          for error in errors
            li.error-msg!= error.msg

      form(method='POST' action='' onsubmit='onSubmit()')
        div.form-group
          label(for='email') Email:
          input#email.form-control(
            type='email', 
            placeholder='Ingresa tu email', 
            name='email', 
            required= true,
            value=(user === undefined ? '' : user.email)
          )
        div.form-group
          label(for='first_name') Nombre:
          input#first_name.form-control(
            type='text', 
            placeholder='Ingresa tu nombre de pila', 
            name='first_name',
            required= true,          
            value=(user === undefined ? '' : user.first_name)
          )
          
        div.form-group
          label(for='last_name') Apellido:
          input#last_name.form-control(
            type='text', 
            placeholder='Ingresa tu apellido', 
            name='last_name', 
            required= true,          
            value=(user === undefined ? '' : user.last_name)
          )

        div.form-group
          label(for='phone') Celular de contacto:
          input#phone.form-control(
            type='text', 
            placeholder='Ingresa tu celular', 
            name='phone', 
            required= true,          
            value=(user === undefined ? '' : user.phone)
          )
        
        div.form-group
          label(for='date_of_birth') Fecha de nacimiento:        
          #datetimepicker.input-group.date
            input#date_of_birth.form-control(
              type='text'
              placeholder='Ingresa tu fecha de nacimiento', 
              name='date_of_birth', 
              required= true,          
              value=(user === undefined ? '' : moment(user.date_of_birth).format("DD/MM/YYYY"))
            )
            div.input-group-addon(style= "background-color: #e1e1e1; border-radius: 2px;")
              span.fa.fa-calendar(style= "color: black; padding: 8px;")
        div.form-group
          label(for='description') Descripcion de tu estilo de cocina:
          textarea#description.form-control(
            placeholder='Cuentanos sobre tu cocina',
            name="description",
            cols="30", 
            rows="10", 
            required= true,          
          ) #{(user === undefined ? '' : user.description)}
        br
          
        button.btn.btn-primary(type='submit') Ingresar
        hr

block scripts
  script.
    $('#datetimepicker').datepicker({
      format: "dd/mm/yyyy",
      autoclose: true,
      orientation: "bottom auto",
      language: 'es'
    });
    function onSubmit (){
      const date_array = $('#date_of_birth')[0].value.split("/");
      date_array[0] = +date_array[0]
      const date = new Date(date_array[2] + "-" + date_array[1] + "-" + date_array[0]).toISOString();
      $('#date_of_birth')[0].value = date;
    }
