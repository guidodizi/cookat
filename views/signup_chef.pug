extends layout
block content

  div.col-md-8.col-md-offset-2.content
    h2 
      span.fa.fa-sign-in 
      | &nbsp; Sign up

    if errors
      ul
        for error in errors
          li.error-msg!= error.msg

    form(method='POST' action='' onsubmit="return checkForm()" )  
      div.form-group
        label(for='first_name') Nombre:
        input#first_name.form-control(
          type='text', 
          placeholder='Ingresa tu nombre de pila', 
          name='first_name',
          required= true,          
          value=(chef === undefined ? '' : chef.last_name)
        )
        
      div.form-group
        label(for='last_name') Apellido:
        input#last_name.form-control(
          type='text', 
          placeholder='Ingresa tu apellido', 
          name='last_name', 
          required= true,          
          value=(chef === undefined ? '' : chef.last_name)
        )
      
      div.form-group
        label(for='phone') Celular de contacto:
        input#phone.form-control(
          type='text', 
          placeholder='Ingresa tu celular', 
          name='phone', 
          required= true,          
          value=(chef === undefined ? '' : chef.phone)
        )
        
      div.form-group
        label(for='date_of_birth') Fecha de nacimiento:
        input#date_of_birth.form-control(
          type='date', 
          placeholder='Ingresa tu fecha de nacimiento', 
          name='date_of_birth', 
          required= true,          
          value=(chef === undefined ? '' : chef.date_of_birth)
        )
        
      div.form-group
        label(for='price_hour') Precio por hora de trabajo:
        input#price_hour.form-control(
          type='number', 
          placeholder='Ingresa tu precio por hora hombre, recomendamos valores cercanos a $300', 
          name='price_hour', 
          required= true,          
          value=(chef === undefined ? '' : chef.price_hour)
        )

      div.form-group
        label(for='description') Descripcion de tu estilo de cocina:
        textarea#description.form-control(
          placeholder='Cuentanos sobre tu cocina',
          name="description",
          cols="30", 
          rows="10", 
          required= true,          
          value=(chef === undefined ? '' : chef.description)
        )


        
      button.btn.btn-primary.btn-lg(type='submit') Submit

      hr
      p Ya tenés cuenta? &nbsp;
        a(href="/login") Login
      p O ir al &nbsp;
        a(href="/") Home

  script.
    function checkForm() {
      //var email = document.querySelector(`#email`).value;
      var pass = document.querySelector(`#password`).value;
      var pass_con = document.querySelector(`#password_confirm`).value;
      //regular expresion to validate email, extra security
      //var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      //catch sumbission
      if (pass != pass_con){
        alert('No coinciden las contraseñas')
        return false;
      }else{
        return true;
      }
        
    }
