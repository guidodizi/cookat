extends layout
block content

  div.col-md-8.col-md-offset-2.content
    h2 
      span.fa.fa-sign-in 
      | &nbsp; Sign up
      
    if errors
      ul
        for error in errors
          li.error-msg!= error.msg

    form(method='POST' action='' onsubmit="return checkForm()" )
      div.form-group
        label(for='email') Email:
        input#email.form-control(
          type='email', 
          placeholder='Ingresa tu email', 
          name='email', 
          required= true,
          value=(chef === undefined ? '' : chef.user.email)
        )
    
      div.form-group
        label(for='password') Password:
        input#password.form-control(
          type='password', 
          placeholder='Ingresa tu contraseña', 
          name='password',
          required= true,
        )
        
      div.form-group
        label(for='password_confirm') Password confirm:
        input#password_confirm.form-control(
          type='password', 
          placeholder='Vuelve a ingresar tu contraseña', 
          name='password_confirm',
          required= true
        )
  
      button.btn.btn-primary.btn-lg(type='submit') Submit

      hr
      p Ya tenés cuenta? &nbsp;
        a(href="/login") Login
      p O ir al &nbsp;
        a(href="/") Home

