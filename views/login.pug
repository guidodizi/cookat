extends layout
block sideNav
  nav#sideNav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
    a.navbar-brand.js-scroll-trigger(href="/")
      span.d-block.d-lg-none CookAt
      span.d-none.d-lg-block
        img.img-fluid.img-profile.rounded-circle.mx-auto.mb-2(src='/images/logo_circle.png', alt='')
    .collapse.navbar-collapse
      ul.navbar-nav
        li.nav-item
          a.nav-link(href= "/signup") Registrarme
        
block content
  section.padded-section.p-3.p-lg-5.d-flex.d-column
    .my-auto
      h2 
        span.fa.fa-sign-in 
        | &nbsp; Entrar
        
      if errors
        ul
          for error in errors
            li.error-msg!= error.msg

      form(method='POST' action='' onsubmit="return checkForm()" )
        div.form-group
          label(for='email') Email:
          input#email.form-control(
            type='email', 
            placeholder='Ingresa tu email', 
            name='email', 
            required= true,
            value=(chef === undefined ? '' : chef.user.email)
          )
      
        div.form-group
          label(for='password') Password:
          input#password.form-control(
            type='password', 
            placeholder='Ingresa tu contraseña', 
            name='password',
            required= true,
          )
          div(style={margin: '3rem 0 0'})
            button.btn.btn-primary(type='submit', style={"margin-right": '30px'}) Entrar
            a.btn.btn-primary(href="/auth/facebook")
              span.fa.fa-facebook
              | &nbsp; Continuar con Facebook

        hr
        p No tenés cuenta? &nbsp;
          a(href="/signup") Registrarme

